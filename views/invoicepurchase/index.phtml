function delRow(id,rowIndex){
  try{
      var table=document.getElementById(id);
      var rowCount=table.rows.length;
      if(rowCount<=2){
        alert("Cannot delete all the rows.");
      }
      else{
        table.deleteRow(rowIndex+1);
      }
      
      $('#'+id+' tr:last td input:first').focus();
      var i=1;
      $('#'+id+' tbody tr td:first-child').each(function() {
        $(this).text(i);
        i++;
      });

      var rate = parseFloat(get_number('#invoice_purchase_money_rate')) || 0;
      var tongtienhang = 0;
      var tongtienthue = 0;
      $('.invoice_purchase_item_money').each(function(){
        var rowIndex=$(this).closest('tr').index();

        var price = parseFloat(get_number('.invoice_purchase_item_price:eq('+rowIndex+')')) || 0;
        var val = parseFloat(get_number('.invoice_purchase_item_number:eq('+rowIndex+')')) || 0;
        var vat = parseFloat(get_number('.invoice_purchase_item_tax_vat_percent:eq('+rowIndex+')')) || 0;

        $(this).val(roundDecimal(val*price*rate,0));
        $('.invoice_purchase_item_tax_vat:eq('+rowIndex+')').val(roundDecimal(vat/100*price*val*rate,0));
        $('.invoice_purchase_item_total:eq('+rowIndex+')').val(roundDecimal(vat/100*price*val*rate,0)+roundDecimal(price*val*rate,0));

        tongtienhang += roundDecimal(val*price*rate,0);
        tongtienthue += roundDecimal(vat/100*price*val*rate,0);
      });

      $('#money').html(tongtienhang);
      $('#vat').html(tongtienthue);
